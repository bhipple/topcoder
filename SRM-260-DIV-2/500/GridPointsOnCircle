using namespace std;

// }}}

class GridPointsOnCircle
{
public:
    int countPoints(int rSquare)
    {
        int x = 1, y = 0, pts = 0;

        while(x * x <= rSquare) {
            y = 0;
            while(y * y <= rSquare) {
                if(x * x + y * y == rSquare)
                    ++pts;

                ++y;
            }
            ++x;
        }

        return 4 * pts;
    }
};


